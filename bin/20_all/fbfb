#!/usr/bin/env zsh
set -e

OPTIONS=$(getopt -o d:em:p:u:vy \
            --long date:,edit,message:,path:,user:,view,yesterday \
            -n 'fbfb' -- "$@")
eval set -- "$OPTIONS"

WHO=
DATE="now"
MESSAGE=
ACTION="append"

while true; do
    case "$1" in
        -d|--date)
            DATE="$2"
            shift 2
            ;;

        -e|--edit)
            ACTION="edit"
            shift
            ;;

        -m|--message)
            MESSAGE="$2"
            shift 2
            ;;

        -p|--path)
            FBFB_PATH="$2"
            shift 2
            ;;

        -u|--user)
            WHO="$2"
            shift 2
            ;;

        -v|--view)
            ACTION="view"
            shift
            ;;

        -y|--yesterday)
            DATE="yesterday"
            shift
            ;;

        --)
            shift
            break
            ;;

        *)
            break
            ;;
    esac
done

DATE=$(date --date=$DATE +%F)
if [ -z $WHO ]; then
    WHO=$(whoami)
fi

mkdir -p $FBFB_PATH/$WHO
FILE_PATH=$FBFB_PATH/$WHO/$DATE.md

case $ACTION in
    append)
        if [ -z $MESSAGE ]; then
            TEMPFILE=$(mktemp)
            ${EDITOR:-vim} $TEMPFILE
            MESSAGE=$(cat $TEMPFILE)
            rm $TEMPFILE
        fi
        echo $MESSAGE >> $FILE_PATH
        ;;

    edit)
        ${EDITOR:-vim} $FILE_PATH
        ;;

    view)
        if env which -s bat ; then
            bat $FILE_PATH
        else
            ${PAGER:-cat} $FILE_PATH
        fi
        ;;

esac
