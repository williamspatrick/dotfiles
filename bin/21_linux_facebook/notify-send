#!/usr/bin/env zsh

# Script to forward notifications to pingme
# Handles -i (icon) and -a (application) options

icon=""
app=""

# Parse options
while getopts "i:a:" opt; do
  case $opt in
    i) icon="$OPTARG" ;;
    a) app="$OPTARG" ;;
    *) ;;
  esac
done

# Remove the processed options from the arguments list
shift $((OPTIND-1))

# Forward remaining arguments to pingme
pingme "$@"

